<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Main Management Screen" Height="800" Width="1000"
        Background="#EAF6F6"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ModernButton_Square" TargetType="Button">
            <Setter Property="Background" Value="#1ABC9C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Color="#888"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#16D2B2" Duration="0:0:0.25"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#1ABC9C" Duration="0:0:0.25"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#139C89"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Clock Header Bar -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0 0 0 20">
            <Label Content="{Binding CurrentTime, StringFormat=dd/MM/yyyy}" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button Style="{StaticResource ModernButton_Square}" Content="⏩ Minute" Command="{Binding PromoteMinuteCommand}" Margin="5 0" Height="30"/>
                <Button Style="{StaticResource ModernButton_Square}" Content="⏩ Hour" Command="{Binding PromoteHourCommand}" Margin="5 0" Height="30"/>
                <Button Style="{StaticResource ModernButton_Square}" Content="⏩ Day" Command="{Binding PromoteDayCommand}" Margin="5 0" Height="30"/>
                <Button Style="{StaticResource ModernButton_Square}" Content="⏩ Month" Command="{Binding PromoteMonthCommand}" Margin="5 0" Height="30"/>
                <Button Style="{StaticResource ModernButton_Square}" Content="⏩ Year" Command="{Binding PromoteYearCommand}" Margin="5 0" Height="30"/>
            </StackPanel>
        </DockPanel>

        <!-- Risk Range Update Section -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 20" VerticalAlignment="Center">
            <TextBox Width="200" Text="{Binding RiskRange, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 10 0"/>
            <Button Style="{StaticResource ModernButton_Square}" Content="⚙ Update Risk Range" Width="200" Command="{Binding UpdateRiskRangeCommand}"/>
        </StackPanel>

        <!-- Grid פנימי עם עמודות: כפתורים + סטטיסטיקה -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- צד ימין: כפתורי ניהול -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">
                <Button Style="{StaticResource ModernButton_Square}" Content="📋 Open List View" Height="50" Margin="0 5" Width="250"/>
                <Button Style="{StaticResource ModernButton_Square}" Content="🛠 Initialize Database" Height="50" Margin="0 5" Width="250" Command="{Binding InitializeDatabaseCommand}"/>
                <Button Style="{StaticResource ModernButton_Square}" Content="🔄 Reset Database" Height="50" Margin="0 5" Width="250" Command="{Binding ResetDatabaseCommand}"/>
                <Button Style="{StaticResource ModernButton_Square}" Content="🤝 Handle Volunteers" Height="50" Margin="0 5" Width="250" Command="{Binding OpenVolunteersCommand}"/>
                <Button Style="{StaticResource ModernButton_Square}" Content="📞 Handle Calls" Height="50" Margin="0 5" Width="250" Command="{Binding OpenCallsCommand}"/>
                <Button Style="{StaticResource ModernButton_Square}" Content="▶ Start Simulator" Height="50" Margin="0 5" Width="250" Command="{Binding StartSimulatorCommand}"/>
                <Button Style="{StaticResource ModernButton_Square}" Content="⏹ Stop Simulator" Height="50" Margin="0 5" Width="250" Command="{Binding StopSimulatorCommand}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5">
                    <TextBox Width="100" Text="{Binding SimulatorSpeed, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 10 0"/>
                    <Button Style="{StaticResource ModernButton_Square}" Content="⚙ Set Speed" Width="100" Command="{Binding SetSpeedCommand}"/>
                </StackPanel>
            </StackPanel>

            <!-- צד שמאל: סטטיסטיקת קריאות -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400" Margin="40 20">
                <TextBlock Text="Call Quantities by Status" FontSize="18" FontWeight="Bold" Margin="0 0 0 10" TextAlignment="Center"/>
                <ListView ItemsSource="{Binding CallQuantities}" SelectionMode="Single" Margin="0 0 0 20">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="{Binding Status}" FontWeight="Bold" Width="200"/>
                                <TextBlock Text="{Binding Quantity}" Width="50" TextAlignment="Right"/>
                                <Button Content="View" Command="{Binding DataContext.ViewCallsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding Status}" Style="{StaticResource ModernButton_Square}" Width="80" Margin="10 0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Window>