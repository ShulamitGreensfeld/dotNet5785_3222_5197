<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Management Screen" Height="800" Width="1000"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Closed="MainWindow_Closed">
    <!-- Main Grid -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- System Clock Area -->
            <RowDefinition Height="Auto"/>
            <!-- Configuration Variables Area -->
            <RowDefinition Height="*"/>
            <!-- Buttons Area -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom Button Area -->
        </Grid.RowDefinitions>

        <!-- System Clock Area -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Label for System Clock -->
            <Label Content="{Binding CurrentTime, StringFormat=dd/MM/yyyy}" FontWeight="Bold" FontSize="20" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <!-- Buttons for advancing the clock -->
            <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                <Button Content="Advance Minute" Margin="5" Click="btnAdvanceMinute_Click"/>
                <Button Content="Advance Hour" Margin="5" Click="btnAdvanceHour_Click"/>
                <Button Content="Advance Day" Margin="5" Click="btnAdvanceDay_Click"/>
                <Button Content="Advance Month" Margin="5" Click="btnAdvanceMonth_Click"/>
                <Button Content="Advance Year" Margin="5" Click="btnAdvanceYear_Click"/>
            </StackPanel>
        </Grid>

        <!-- Configuration Variables Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- TextBox for RiskRange variable -->
            <TextBox Text="{Binding RiskRange, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
            <!-- Button to update RiskRange variable -->
            <Button Content="Update Risk Range" Grid.Column="1" Margin="5" Click="btnUpdateRiskRange_Click"/>
        </Grid>

        <!-- Buttons Area -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Button to open the list view screen -->
            <Button Content="Open List View" Grid.Row="0" HorizontalAlignment="Center" Margin="5" Width="200"/>
            <!-- Button to initialize the database -->
            <Button Content="Initialize Database" Grid.Row="1" HorizontalAlignment="Center" Margin="5" Width="200"/>
            <!-- Button to reset the database -->
            <Button Content="Reset Database" Grid.Row="2" HorizontalAlignment="Center" Margin="5" Width="200"/>
        </Grid>

        <!-- Button for opening the Volunteer List Window -->
        <Button Content="Handle Volunteers" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Click="btnVolunteers_Click" />
    </Grid>
</Window>
