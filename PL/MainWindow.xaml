<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Management Screen" Height="800" Width="1000"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Closed="MainWindow_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- System Clock Area -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="{Binding CurrentTime, StringFormat=dd/MM/yyyy}" FontWeight="Bold" FontSize="20" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                <Button Content="Advance Minute" Margin="5" Click="btnAdvanceMinute_Click"/>
                <Button Content="Advance Hour" Margin="5" Click="btnAdvanceHour_Click"/>
                <Button Content="Advance Day" Margin="5" Click="btnAdvanceDay_Click"/>
                <Button Content="Advance Month" Margin="5" Click="btnAdvanceMonth_Click"/>
                <Button Content="Advance Year" Margin="5" Click="btnAdvanceYear_Click"/>
            </StackPanel>
        </Grid>
        <!-- Configuration Variables Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding RiskRange, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
            <Button Content="Update Risk Range" Grid.Column="1" Margin="5" Click="btnUpdateRiskRange_Click"/>
        </Grid>
        <!-- Buttons Area -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="79*"/>
                <ColumnDefinition Width="411*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button Content="Open List View" Grid.Row="0" HorizontalAlignment="Left" Margin="232,5,0,5" Width="200" Grid.Column="1"/>
            <Button Content="Initialize Database" Grid.Row="1" HorizontalAlignment="Left" Margin="232,5,0,5" Width="200" Grid.Column="1"/>
            <Button Content="Reset Database" Grid.Row="2" HorizontalAlignment="Left" Margin="232,5,0,5" Width="200" Grid.Column="1"/>
            <Button Content="Handle Volunteers" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="281,0,0,0" Click="btnVolunteers_Click" Grid.Column="1" />
        </Grid>
    </Grid>
</Window>
