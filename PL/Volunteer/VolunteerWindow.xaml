<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL.Volunteer"
        xmlns:conv="clr-namespace:PL.Volunteer"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Loaded="Window_Loaded" Closed="Window_Closed"
        Title="VolunteerWindow" Height="700" Width="400">
    <Window.Resources>
        <conv:ConvertUpdateToTrue x:Key="ConvertUpdateToTrueKey"/>
        <conv:ConvertUpdateToVisible x:Key="ConvertUpdateToVisibleKey"/>
        <!-- משאבים נוספים שלך כאן -->
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Id  -->
        <Label Grid.Row="0" Grid.Column="0" Content="Id:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1"
         Text="{Binding CurrentVolunteer.Id, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
         IsReadOnly="{Binding ButtonText, Converter={StaticResource ConvertUpdateToTrueKey}}"/>


        <!-- Full Name -->
        <Label Grid.Row="1" Grid.Column="0" Content="Full Name:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.FullName, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- Cellphone Number -->
        <Label Grid.Row="2" Grid.Column="0" Content="Cellphone:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.CellphoneNumber, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- Email -->
        <Label Grid.Row="3" Grid.Column="0" Content="Email:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.Email, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- Password -->
        <Label Grid.Row="4" Grid.Column="0" Content="Password:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.Password, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- Full Address -->
        <Label Grid.Row="5" Grid.Column="0" Content="Address:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.FullAddress, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- Latitude -->
        <Label Grid.Row="6" Grid.Column="0" Content="Latitude:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="6" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.Latitude, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- Longitude -->
        <Label Grid.Row="7" Grid.Column="0" Content="Longitude:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="7" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.Longitude, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- Role (Enum) -->
        <Label Grid.Row="8" Grid.Column="0" Content="Role:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="8" Grid.Column="1"
                  ItemsSource="{Binding Source={StaticResource RoleCollectionKey}}"
                  SelectedValue="{Binding CurrentVolunteer.Role, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- IsActive (bool) -->
        <Label Grid.Row="9" Grid.Column="0" Content="Is Active:" VerticalAlignment="Center"/>
        <CheckBox Grid.Row="9" Grid.Column="1"
                  IsChecked="{Binding CurrentVolunteer.IsActive, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- DistanceType (Enum) -->
        <Label Grid.Row="10" Grid.Column="0" Content="Distance Type:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="10" Grid.Column="1"
                  ItemsSource="{Binding Source={StaticResource DistanceTypesCollectionKey}}"
                  SelectedValue="{Binding CurrentVolunteer.DistanceType, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- MaxDistance -->
        <Label Grid.Row="11" Grid.Column="0" Content="Max Distance:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="11" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.MaxDistance, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- TotalHandledCalls -->
        <Label Grid.Row="12" Grid.Column="0" Content="Handled Calls:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="12" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.TotalHandledCalls, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- TotalCanceledCalls -->
        <Label Grid.Row="13" Grid.Column="0" Content="Canceled Calls:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="13" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.TotalCanceledCalls, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- TotalExpiredCalls -->
        <Label Grid.Row="14" Grid.Column="0" Content="Expired Calls:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="14" Grid.Column="1"
                 Text="{Binding CurrentVolunteer.TotalExpiredCalls, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <!-- Add/Update Button -->
        <Button Grid.Row="16" Grid.Column="0" Grid.ColumnSpan="2"
                Content="{Binding ButtonText}" Height="40" Margin="0,20,0,0"
                Click="btnAddUpdate_Click"/>
    </Grid>
</Window>
