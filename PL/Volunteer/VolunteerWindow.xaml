<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        xmlns:conv="clr-namespace:PL"
        Loaded="Window_Loaded" Closed="Window_Closed"
        Title="VolunteerWindow" Height="750" Width="500"
        Background="#FFF5F5F5"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- General style for buttons -->
        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="Background" Value="#FF6200EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3700B3"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF03DAC5"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Update button style -->
        <Style TargetType="Button" x:Key="UpdateButtonStyle" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#FF00B894"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF019875"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF004D40"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for text fields -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#FFB0BEC5"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style for labels -->
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <!-- Style for ComboBox and CheckBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <!-- 15 fields + buttons -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Data fields -->
            <Label Grid.Row="0" Grid.Column="0" Content="Id:"/>
            <TextBox Grid.Row="0" Grid.Column="1"
                     Text="{Binding CurrentVolunteer.Id, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                     IsReadOnly="{Binding ButtonText, Converter={StaticResource ConvertUpdateToTrueKey}}"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Full Name:"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CurrentVolunteer.FullName, Mode=TwoWay}"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Cellphone:"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CurrentVolunteer.CellphoneNumber, Mode=TwoWay}"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Email:"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CurrentVolunteer.Email, Mode=TwoWay}"/>

            <Label Grid.Row="4" Grid.Column="0" Content="Password:"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding CurrentVolunteer.Password, Mode=TwoWay}"/>

            <Label Grid.Row="5" Grid.Column="0" Content="Address:"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding CurrentVolunteer.FullAddress, Mode=TwoWay}"/>

            <Label Grid.Row="6" Grid.Column="0" Content="Latitude:"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CurrentVolunteer.Latitude, Mode=TwoWay}"/>

            <Label Grid.Row="7" Grid.Column="0" Content="Longitude:"/>
            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding CurrentVolunteer.Longitude, Mode=TwoWay}"/>

            <Label Grid.Row="8" Grid.Column="0" Content="Role:"/>
            <ComboBox Grid.Row="8" Grid.Column="1"
                      ItemsSource="{Binding Source={StaticResource RoleCollectionKey}}"
                      SelectedValue="{Binding CurrentVolunteer.Role, Mode=TwoWay}"/>

            <Label Grid.Row="9" Grid.Column="0" Content="Is Active:"/>
            <CheckBox Grid.Row="9" Grid.Column="1"
                      IsChecked="{Binding CurrentVolunteer.IsActive, Mode=TwoWay}"
                      IsEnabled="{Binding CanSetInactive}"/>

            <Label Grid.Row="10" Grid.Column="0" Content="Distance Type:"/>
            <ComboBox Grid.Row="10" Grid.Column="1"
                      ItemsSource="{Binding Source={StaticResource DistanceTypesCollectionKey}}"
                      SelectedValue="{Binding CurrentVolunteer.DistanceType, Mode=TwoWay}"/>

            <Label Grid.Row="11" Grid.Column="0" Content="Max Distance:"/>
            <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding CurrentVolunteer.MaxDistance, Mode=TwoWay}"/>

            <Label Grid.Row="12" Grid.Column="0" Content="Handled Calls:"/>
            <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding CurrentVolunteer.TotalHandledCalls, Mode=TwoWay}"/>

            <Label Grid.Row="13" Grid.Column="0" Content="Canceled Calls:"/>
            <TextBox Grid.Row="13" Grid.Column="1" Text="{Binding CurrentVolunteer.TotalCanceledCalls, Mode=TwoWay}"/>

            <Label Grid.Row="14" Grid.Column="0" Content="Expired Calls:"/>
            <TextBox Grid.Row="14" Grid.Column="1" Text="{Binding CurrentVolunteer.TotalExpiredCalls, Mode=TwoWay}"/>

            <Button Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="2"
                    Content="צפייה בפרטי הקריאה הנוכחית"
                    Click="ViewCurrentCallDetails_Click"
                    Margin="5"
                    Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>

            <Button Grid.Row="16" Grid.Column="0" Grid.ColumnSpan="2"
                    Content="{Binding ButtonText}" Height="40" Margin="0,15,0,0"
                    Click="btnAddUpdate_Click"
                    Style="{StaticResource UpdateButtonStyle}"/>
            <Button Grid.Row="16" Grid.Column="0" Grid.ColumnSpan="2"
                    Content="מחק"
                    Height="40"
                    Margin="0,0,0,40"
                    Click="btnDelete_Click"
                    Style="{StaticResource RoundedButtonStyle}"
                    Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>

        </Grid>
    </ScrollViewer>
</Window>