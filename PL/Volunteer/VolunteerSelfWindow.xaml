<Window x:Class="PL.Volunteer.VolunteerSelfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="VolunteerSelfWindow" Height="630" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#0D1117"
        FontFamily="Segoe UI">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- GitHub-style TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#161B22"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- GitHub-style ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#161B22"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- GitHub-style CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- GitHub-style Label -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <!-- GitHub-style TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <!-- GitHub-style GroupBox -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- GitHub-style Button -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#238636"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderBrush" Value="#238636"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2EA043"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 0 -->
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!-- Call in progress -->
                <RowDefinition Height="Auto"/>
                <!-- Update -->
                <RowDefinition Height="Auto"/>
                <!-- History -->
                <RowDefinition Height="Auto"/>
                <!-- Call Selection -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Volunteer Info -->
            <Label Grid.Row="0" Grid.Column="0" Content="T.Z:"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Volunteer.Id}" IsReadOnly="True"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Full Name:"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Volunteer.FullName, Mode=TwoWay}"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Phone:"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Volunteer.CellphoneNumber, Mode=TwoWay}"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Email:"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Volunteer.Email, Mode=TwoWay}"/>

            <Label Grid.Row="4" Grid.Column="0" Content="Password:"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Volunteer.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="5" Grid.Column="0" Content="Address:"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Volunteer.FullAddress, Mode=TwoWay}"/>

            <Label Grid.Row="6" Grid.Column="0" Content="Distance Type:"/>
            <ComboBox Grid.Row="6" Grid.Column="1"
                      ItemsSource="{Binding DistanceTypes}"
                      SelectedItem="{Binding Volunteer.DistanceType, Mode=TwoWay}"/>

            <Label Grid.Row="7" Grid.Column="0" Content="Max Distance:"/>
            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Volunteer.MaxDistance, Mode=TwoWay}"/>

            <Label Grid.Row="8" Grid.Column="0" Content="Active:"/>
            <CheckBox Grid.Row="8" Grid.Column="1"
                      IsChecked="{Binding Volunteer.IsActive, Mode=TwoWay}"
                      IsEnabled="{Binding CanSetInactive}"/>

            <Label Grid.Row="9" Grid.Column="0" Content="Role:"/>
            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding Volunteer.Role}" IsReadOnly="True"/>

            <Label Grid.Row="10" Grid.Column="0" Content="Total Calls Handled:"/>
            <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding Volunteer.TotalHandledCalls}" IsReadOnly="True"/>

            <Label Grid.Row="11" Grid.Column="0" Content="Total canceled calls:"/>
            <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding Volunteer.TotalCanceledCalls}" IsReadOnly="True"/>

            <Label Grid.Row="12" Grid.Column="0" Content="Total Expired Calls:"/>
            <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding Volunteer.TotalExpiredCalls}" IsReadOnly="True"/>

            <!-- Call In Progress -->
            <GroupBox Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" Header="read in treatment" Margin="0,20,0,0"
                      Visibility="{Binding HasCallInProgress, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="{Binding Volunteer.CallInProgress.Verbal_description}" FontWeight="Bold"/>
                    <TextBlock Text="Address:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Volunteer.CallInProgress.FullAddress}"/>
                    <TextBlock Text="Call Status:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Volunteer.CallInProgress.CallStatus}"/>
                    <TextBlock Text="Distance from call:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Volunteer.CallInProgress.CallDistance, StringFormat={}{0:0.##} km}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Finish Call" Margin="0,0,10,0" Click="btnFinishCall_Click"/>
                        <Button Content="Cancel Call" Click="btnCancelCall_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Action Buttons -->
            <Button Grid.Row="14" Grid.Column="0" Content="Update" Height="40" Margin="0,20,10,0" Click="btnUpdate_Click"/>
            <Button Grid.Row="14" Grid.Column="1" Content="Call History" Height="40" Margin="10,20,0,0" Click="HistoryButton_Click"/>
            <Button Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="2" Content="Call Selection" Height="40" Margin="0,20,0,0"
                    Click="OpenCallsButton_Click" IsEnabled="{Binding CanSelectCall}"/>
        </Grid>
    </ScrollViewer>
</Window>
