<Window x:Class="PL.AddCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Call" Height="400" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
          DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Call Type -->
            <RowDefinition Height="Auto"/>
            <!-- Description -->
            <RowDefinition Height="Auto"/>
            <!-- Full Address -->
            <RowDefinition Height="Auto"/>
            <!-- Opening Time -->
            <RowDefinition Height="Auto"/>
            <!-- Max Finish Time -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Call Type -->
        <StackPanel Grid.Row="0" Margin="0,0,0,5">
            <TextBlock Text="Call Type:" />
            <ComboBox ItemsSource="{Binding CallTypeCollection}" 
                      SelectedItem="{Binding SelectedCallType}" />
        </StackPanel>

        <!-- Description -->
        <StackPanel Grid.Row="1" Margin="0,0,0,5">
            <TextBlock Text="Description:" />
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!-- Full Address -->
        <StackPanel Grid.Row="2" Margin="0,0,0,5">
            <TextBlock Text="Full Address:" />
            <TextBox Text="{Binding FullAddress, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!-- Opening Time -->
        <StackPanel Grid.Row="3" Margin="0,0,0,5">
            <TextBlock Text="Opening Time:" />
            <DatePicker SelectedDate="{Binding OpeningDate}" IsEnabled="False"/>
        </StackPanel>

        <!-- Max Finish Time -->
        <StackPanel Grid.Row="4" Margin="0,0,0,5">
            <TextBlock Text="Max Finish Time:" />
            <DatePicker SelectedDate="{Binding MaxFinishDate}" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Add" Width="75" Margin="5" Click="AddButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>