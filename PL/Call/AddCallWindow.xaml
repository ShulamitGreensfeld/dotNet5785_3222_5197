<Window x:Class="PL.AddCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Add New Call" Height="250" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Call Type:" VerticalAlignment="Center"/>
        <ComboBox x:Name="CallTypeComboBox" Grid.Row="1" Margin="0,5"
                  ItemsSource="{Binding CallTypeCollection, RelativeSource={RelativeSource AncestorType=Window}}"
                  SelectedIndex="0"/>

        <TextBlock Text="Opening Time:" Grid.Row="2" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <DatePicker x:Name="OpeningTimePicker" Grid.Row="3" SelectedDate="{x:Static sys:DateTime.Now}" />

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Add" Width="75" Margin="5" Click="AddButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>