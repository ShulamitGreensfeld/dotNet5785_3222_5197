<Window x:Class="PL.Call.CallDetailsWindow" 
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
Title="{Binding WindowTitle}" Height="600" Width="600" 
WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Call ID -->
        <Label Grid.Row="0" Grid.Column="0" Content="Call ID:"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Call.Id}" IsReadOnly="True"/>

        <!-- Call Type -->
        <Label Grid.Row="1" Grid.Column="0" Content="Call Type:"/>
        <ComboBox Grid.Row="1" Grid.Column="1"
ItemsSource="{Binding CallTypes}"
SelectedItem="{Binding Call.CallType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
IsEnabled="{Binding IsCallTypeEditable}"/>

        <!-- Description -->
        <Label Grid.Row="2" Grid.Column="0" Content="Description:"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
Text="{Binding Call.Verbal_description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
IsReadOnly="{Binding IsDescriptionReadOnly}"/>

        <!-- Address -->
        <Label Grid.Row="3" Grid.Column="0" Content="Address:"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
Text="{Binding Call.FullAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
IsReadOnly="{Binding IsAddressReadOnly}"/>

        <!-- Status -->
        <Label Grid.Row="4" Grid.Column="0" Content="Status:"/>
        <TextBox Grid.Row="4" Grid.Column="1" 
Text="{Binding Call.CallStatus}" 
IsReadOnly="True"/>

        <!-- opening time -->
        <Label Grid.Row="5" Grid.Column="0" Content="Opening Time:"/>
        <TextBox Grid.Row="5" Grid.Column="1"
Text="{Binding Call.Opening_time, StringFormat=dd/MM/yyyy HH:mm}"
IsReadOnly="True"/>

        <!-- Maximum Finish Time -->
        <Label Grid.Row="6" Grid.Column="0" Content="Maximum Finish Time:"/>
        <DatePicker Grid.Row="6" Grid.Column="1"
SelectedDate="{Binding Call.Max_finish_time, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
IsEnabled="{Binding IsMaxFinishTimeEditable}"/>

        <!-- Distance from Volunteer -->
        <Label Grid.Row="7" Grid.Column="0" Content="Distance from Volunteer:"/>
        <TextBox Grid.Row="7" Grid.Column="1"
Text="{Binding CallDistance, StringFormat={}{0:F2} }"
IsReadOnly="True"/>

        <!-- Assignment List (View/Update Mode Only) -->
        <Label Grid.Row="8" Grid.Column="0" Content="Assignments:" VerticalAlignment="Top"/>
        <ListView Grid.Row="8" Grid.Column="1" ItemsSource="{Binding Call.AssignmentsList}" Height="100"
Visibility="{Binding IsAddMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Volunteer" DisplayMemberBinding="{Binding VolunteerFullName}" Width="120"/>
                    <GridViewColumn Header="Start" DisplayMemberBinding="{Binding Start_time}" Width="100"/>
                    <GridViewColumn Header="End" DisplayMemberBinding="{Binding End_time}" Width="100"/>
                    <GridViewColumn Header="End Type" DisplayMemberBinding="{Binding EndType}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- error messages -->
        <TextBlock Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" 
Text="{Binding ErrorMessage}" Foreground="Red" TextAlignment="Center" Margin="0,10,0,0"/>

        <!-- action buttons -->
        <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="{Binding ActionButtonText}" Height="40" Width="120" Margin="10,0" 
Click="AddOrUpdateButton_Click" 
IsEnabled="{Binding IsActionButtonEnabled}"/>
            <Button Content="Cancel" Height="40" Width="80" Margin="10,0" 
Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>