<Window x:Class="PL.SelectCallForTreatmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Call for Treatment" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filter and Sort Options -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Filter by Call Type:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding CallTypeCollection}" SelectedItem="{Binding SelectedCallType}" Width="150" Margin="0,0,20,0"/>
            <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding SortOptions}" SelectedItem="{Binding SelectedSortOption}" Width="150"/>
        </StackPanel>

        <!-- Calls List -->
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding OpenCalls}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="מזהה קריאה" Binding="{Binding Id}" />
                <DataGridTextColumn Header="סוג קריאה" Binding="{Binding CallType}" />
                <DataGridTextColumn Header="כתובת" Binding="{Binding FullAddress}" />
                <DataGridTextColumn Header="מרחק" Binding="{Binding CallDistance}" />
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="בחר" Command="{Binding DataContext.SelectCallCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <!-- Calls ListView -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="עדכון כתובת:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Text="{Binding VolunteerAddress}" Width="200" Margin="0,0,10,0"/>
            <Button Content="עדכן" Command="{Binding UpdateAddressCommand}" />
        </StackPanel>

        <!-- Update Address -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Update Address:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Text="{Binding VolunteerAddress}" Width="200" Margin="0,0,10,0"/>
            <Button Content="Update" Command="{Binding UpdateAddressCommand}"/>
        </StackPanel>

        <!-- Read-Only TextBox -->
        <TextBox Text="{Binding SomeProperty}" IsReadOnly="{Binding IsReadOnly}" Grid.Row="2" Margin="10"/>

    </Grid>
</Window>