<Window x:Class="PL.CallManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="Call Management" Height="400" Width="900"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:DeleteButtonVisibilityConverter x:Key="DeleteButtonVisibilityConverter"/>
        <local:CancelAssignmentVisibilityConverter x:Key="CancelAssignmentVisibilityConverter"/>

        <DataTemplate x:Key="CallRowTemplate">
            <Grid Margin="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="110"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding CallId}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="{Binding CallType}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="{Binding CallStatus}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="3" Text="{Binding Opening_time, StringFormat=dd/MM/yyyy HH:mm}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="4" Text="{Binding LastVolunteerName}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="5" Text="{Binding TotalAssignments}" VerticalAlignment="Center"/>
                <Button Grid.Column="6" Content="מחק" Margin="2,0,0,0"
                        Visibility="{Binding Path=., Converter={StaticResource DeleteButtonVisibilityConverter}}"
                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"/>
                <Button Grid.Column="7" Content="בטל הקצאה" Margin="2,0,0,0"
                        Visibility="{Binding Path=., Converter={StaticResource CancelAssignmentVisibilityConverter}}"
                        Command="{Binding DataContext.CancelAssignmentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
            <TextBlock Text="סנן לפי סוג:" Margin="0,0,5,0" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding CallTypeCollection}" SelectedItem="{Binding SelectedCallType}" Width="110" Margin="0,0,10,0"/>

            <TextBlock Text="סנן לפי סטטוס:" Margin="0,0,5,0" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding CallStatusCollection}" SelectedItem="{Binding SelectedCallStatus}" Width="110" Margin="0,0,10,0"/>

            <TextBlock Text="מיין לפי:" Margin="0,0,5,0" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding SortFields}" SelectedItem="{Binding SelectedSortField}" Width="110" Margin="0,0,10,0"/>

            <TextBlock Text="קבץ לפי:" Margin="0,0,5,0" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding GroupFields}" SelectedItem="{Binding SelectedGroupField}" Width="110"/>

            <Button Content="הוסף קריאה"
        Margin="20,0,0,0"
        Padding="10,2"
        Command="{Binding DataContext.AddCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>

        </StackPanel>

        <Grid DockPanel.Dock="Top" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="מזהה" FontWeight="Bold"/>
            <TextBlock Grid.Column="1" Text="סוג קריאה" FontWeight="Bold"/>
            <TextBlock Grid.Column="2" Text="סטטוס" FontWeight="Bold"/>
            <TextBlock Grid.Column="3" Text="נפתחה בתאריך" FontWeight="Bold"/>
            <TextBlock Grid.Column="4" Text="מתנדב אחרון" FontWeight="Bold"/>
            <TextBlock Grid.Column="5" Text="סה״כ הקצאות" FontWeight="Bold"/>
            <TextBlock Grid.Column="6" Text="פעולות" FontWeight="Bold"/>
        </Grid>

        <ListView ItemsSource="{Binding CallListView}" 
                  ItemTemplate="{StaticResource CallRowTemplate}" 
                  Margin="10"
                  SelectedItem="{Binding SelectedCall, Mode=TwoWay}">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name}" Margin="0,5,0,0"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
    </DockPanel>
</Window>
