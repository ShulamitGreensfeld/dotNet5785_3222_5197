<Window x:Class="PL.CallManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="Call Management" Height="400" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0D1117"
        FontFamily="Segoe UI">

    <Window.Resources>
        <DataTemplate x:Key="CallRowTemplate">
            <Grid Margin="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <!-- עמודת Time Left חדשה -->
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="110"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding CallId}" VerticalAlignment="Center" Foreground="White"/>
                <TextBlock Grid.Column="1" Text="{Binding CallType}" VerticalAlignment="Center" Foreground="White"/>
                <TextBlock Grid.Column="2" Text="{Binding CallStatus}" VerticalAlignment="Center" Foreground="White"/>
                <TextBlock Grid.Column="3" Text="{Binding Opening_time, StringFormat=dd/MM/yyyy HH:mm}" VerticalAlignment="Center" Foreground="White"/>
                <TextBlock Grid.Column="4" Text="{Binding LastVolunteerName}" VerticalAlignment="Center" Foreground="White"/>
                <TextBlock Grid.Column="5" Text="{Binding TotalAssignments}" VerticalAlignment="Center" Foreground="White"/>
                <TextBlock Grid.Column="6" Text="{Binding TimeLeft, StringFormat={}{0:g}}" VerticalAlignment="Center" Foreground="White"/>
                <!-- Time Left -->
                <Button Grid.Column="7" Content="Delete" Margin="2,0,0,0"
                        Background="#238636" Foreground="White" BorderBrush="#238636"
                        Visibility="{Binding Path=., Converter={StaticResource DeleteButtonVisibilityConverter}}"
                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"/>
                <Button Grid.Column="8" Content="Cancel Assignment" Margin="2,0,0,0"
                        Background="#238636" Foreground="White" BorderBrush="#238636"
                        Visibility="{Binding Path=., Converter={StaticResource CancelAssignmentVisibilityConverter}}"
                        Command="{Binding DataContext.CancelAssignmentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
            <TextBlock Text="Filter by Type:" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="White"/>
            <ComboBox ItemsSource="{Binding CallTypeCollection}" SelectedItem="{Binding SelectedCallType}" Width="110" Margin="0,0,10,0"/>

            <TextBlock Text="Filter by Status:" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="White"/>
            <ComboBox ItemsSource="{Binding CallStatusCollection}" SelectedItem="{Binding SelectedCallStatus}" Width="110" Margin="0,0,10,0"/>

            <TextBlock Text="Sort by:" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="#2EA043"/>
            <ComboBox ItemsSource="{Binding SortFields}" SelectedItem="{Binding SelectedSortField}" Width="110" Margin="0,0,10,0"/>

            <TextBlock Text="Group by:" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="White"/>
            <ComboBox ItemsSource="{Binding GroupFields}" SelectedItem="{Binding SelectedGroupField}" Width="110"/>

            <Button Content="➕ Add Call"
                    Margin="20,0,0,0"
                    Padding="10,2"
                    Background="#238636"
                    Foreground="White"
                    BorderBrush="#238636"
                    Command="{Binding AddCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>

        <Grid DockPanel.Dock="Top" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <!-- עמודת Time Left חדשה -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="ID" FontWeight="Bold" Foreground="#2EA043"/>
            <TextBlock Grid.Column="1" Text="Call Type" FontWeight="Bold" Foreground="#2EA043"/>
            <TextBlock Grid.Column="2" Text="Status" FontWeight="Bold" Foreground="#2EA043"/>
            <TextBlock Grid.Column="3" Text="Opened At" FontWeight="Bold" Foreground="#2EA043"/>
            <TextBlock Grid.Column="4" Text="Last Volunteer" FontWeight="Bold" Foreground="#2EA043"/>
            <TextBlock Grid.Column="5" Text="Total Assignments" FontWeight="Bold" Foreground="#2EA043"/>
            <TextBlock Grid.Column="6" Text="Time Left" FontWeight="Bold" Foreground="#2EA043"/>
            <!-- Time Left -->
            <TextBlock Grid.Column="7"
           Text="{Binding TimeLeft, StringFormat={}{0:hh\\:mm\\:ss}, TargetNullValue='--:--:--'}"
           VerticalAlignment="Center"
           Foreground="White"/>
        </Grid>

        <ListView ItemsSource="{Binding CallListView}" 
                  ItemTemplate="{StaticResource CallRowTemplate}" 
                  Margin="10"
                  SelectedItem="{Binding SelectedCall, Mode=TwoWay}"
                  MouseDoubleClick="ListView_MouseDoubleClick"
                  Background="#161B22" Foreground="White"
                  BorderBrush="#30363D">
            <ListView.InputBindings>
                <MouseBinding Gesture="LeftDoubleClick" Command="{Binding OpenCallDetailsCommand}" />
            </ListView.InputBindings>

            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name}" Margin="0,5,0,0" Foreground="White"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
    </DockPanel>
</Window>