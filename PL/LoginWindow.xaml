<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="Login" Height="300" Width="400"
        WindowStartupLocation="Manual">

    <!-- Bind DataContext to the LoginViewModel -->
    <Window.DataContext>
        <local:LoginViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="User ID:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" Width="200" Height="30" Margin="10"/>

            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox Width="200" Height="30" Margin="10"
                         local:PasswordBinding.BindPassword="True"
                         local:PasswordBinding.BoundPassword="{Binding Password, Mode=TwoWay}" />

            <Button Content="Login" Width="100" HorizontalAlignment="Center"
                    Command="{Binding LoginCommand}"/>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>