<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="UserId:" Margin="0,0,0,5"/>
            <TextBox x:Name="UserIdTextBox" Width="200" Height="30" Margin="10" />

            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="30" Margin="10" />

            <Button Content="Login" Click="LoginButton_Click" Width="100" HorizontalAlignment="Center"/>
            <TextBlock x:Name="ErrorMessageTextBlock" Foreground="Red" Margin="10" />
        </StackPanel>
    </Grid>
</Window>

